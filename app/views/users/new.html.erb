<%= provide(:title,"Sign Up") %>
<center>
<div class="card">
  <%= form_for(@user,url: sign_up_path) do |form| %>
    <div class="form-group">
      <%= form.text_field :name ,:class => "form-control",placeholder: "Name",required: true%>
    </div>
    <div class="form-group">
      <%= form.text_field :email,:class => "form-control",placeholder: "Email" ,required: true%>
    </div>
    <div class="form-group">
      <%= form.text_field :password ,:class => "form-control",autocomplete: :off,placeholder: "Password",required: true%>
    </div>
    <div class="form-group">
      <%= form.text_field :password_confirmation ,:class => "form-control",autocomplete: :off,placeholder: "Confirm Password",required: true%>
    </div>
    <div class="actions">
      <%= form.submit "Sign Up",class:"btn btn-success"%>
    </div>
  <% end %>
</div>
</center>